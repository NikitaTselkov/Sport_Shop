<Window x:Class="Sport_Shop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sport_Shop"
        xmlns:VM="clr-namespace:Sport_Shop.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <VM:MainViewModel />
    </Window.DataContext>

    <Grid>
        <StackPanel VerticalAlignment="Center">
        <TextBlock Text="{Binding Clicks}" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" MinHeight="50" MinWidth="200" Background="PaleGoldenrod" TextAlignment="Center" />

            <Button Content="Click" FontSize="40" Height="50" Width="150" Margin="20" Command="{Binding ClickAdd}" />
        </StackPanel>
    </Grid>
</Window>
